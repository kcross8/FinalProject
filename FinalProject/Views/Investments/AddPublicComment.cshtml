@model object
    <head>
        <style>
            .button {
                background-color: green;
                color: white;
                border: 2px solid black;
                border-radius: 4px
            }
        </style>
    </head>
    <div class="godown-85" id="godown"></div>

    <form action="/Investments/AddPublicComments" id="usrform" method="post">
        <input type="hidden" name="companyName" value="@Model.ToString()" />
        <textarea class="gui-textarea" id="comment" name="comment" placeholder="Enter Comment..."></textarea><br />
        <input class="button" type="submit" />
    </form>
    <button class="button" onclick="history.go(-1)">Back</button>